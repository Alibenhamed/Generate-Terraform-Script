@model InfrastructureGenerator.Controllers.TerraformScriptViewModel

@{
    ViewData["Title"] = "Generate Terraform Script";
}

<h2>Generate Terraform Script TREND-IT</h2>

<form method="post">
    <div class="form-group">
        <label for="param1">Nom de la machine virtuelle :</label>
        <input type="text" class="form-control" id="param1" name="Param1" value="@Model?.Param1">
    </div>
    <div class="form-group">
        <label for="param2">Région :</label>
        <input type="text" class="form-control" id="param2" name="Param2" value="@Model?.Param2">
    </div>
    <div class="form-group">
        <label for="param3">Network Name:</label>
        <input type="text" class="form-control" id="param3" name="Param3" value="@Model?.Param3">
    </div>
    <div class="form-group">
        <label for="param4">Address Space:</label>
        <input type="text" class="form-control" id="param4" name="Param4" value="@Model?.Param4">
    </div>
    <div class="form-group">
        <label for="param5">Network Location:</label>
        <input type="text" class="form-control" id="param5" name="Param5" value="@Model?.Param5">
    </div>
    <div class="form-group">
        <label for="param6">Resource group name:</label>
        <input type="text" class="form-control" id="param6" name="Param6" value="@Model?.Param6">
    </div>
    <button type="submit" class="btn btn-primary">Generate Script</button>
</form>

@if (!string.IsNullOrEmpty(Model?.TerraformScript))
{
    <hr />
    <h3>Generated Terraform Script</h3>
    <pre><code>@Model.TerraformScript</code></pre>
}
